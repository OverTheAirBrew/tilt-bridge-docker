{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": false,
    // "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "dist",
    "lib": ["es2017"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
